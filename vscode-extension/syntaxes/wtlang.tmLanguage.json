{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "WTLang",
  "scopeName": "source.wtlang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wtlang",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wtlang",
          "match": "\\b(page|table|from|display|button|input|if|else|test)\\b"
        },
        {
          "name": "keyword.other.wtlang",
          "match": "\\b(filter|sort|aggregate|unique|required|min|max)\\b"
        },
        {
          "name": "constant.language.wtlang",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wtlang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wtlang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.wtlang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.wtlang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wtlang",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.wtlang",
          "match": "\\b(number|text|date|boolean)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.wtlang",
          "match": "(->|==|!=|<=|>=|<|>|\\+|-|\\*|/|=|\\.|,|:|;|\\{|\\}|\\[|\\]|\\(|\\))"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.wtlang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    }
  }
}
